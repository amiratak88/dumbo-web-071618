<h1>Create a Book!</h1>
<form action="/books" method="post">
  <div>
    <label>Author</label>
    <select name="author_id">
      <% @authors.each do |author| %>
        <option value="<%= author.id %>"><%= author.name %></option>
      <% end %>
    </select>
    <!-- <input id="author" type="text" name="author_id"> -->
  </div>
  <div>
    <label>Title</label>
    <input id="title" type="text" name="title">
  </div>
  <div>
    <label>Snippet</label>
    <input id="snippet" type="text" name="snippet">
  </div>
  <input type="submit" value="Submit for a new boook">
</form>
